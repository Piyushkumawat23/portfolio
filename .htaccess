<IfModule mod_rewrite.c>

    # ‚úÖ Allow indexing for HTML & PHP files
    <FilesMatch "\.(html|php)$">
        Header set X-Robots-Tag "index, follow"
    </FilesMatch>

    # ‚úÖ Disable MultiViews & Index listings
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # üîÅ Redirect from old domain (free.nf) to new domain
    RewriteCond %{HTTP_HOST} ^piyushkumawat\.free\.nf$ [NC]
    RewriteRule ^(.*)$ https://piyushkumawat.in/$1 [L,R=301]

    # üîí Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # üåê Redirect www to non-www (optional but recommended)
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

    # üõ°Ô∏è Pass Authorization headers properly
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # üö´ Remove trailing slash if not a directory
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [R=301,L]

    # üöÄ Route all other requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>
